<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Event</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Seat</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.code %></td>
        <td><%= ticket.event_id %></td>
        <td><%= ticket.fname %></td>
        <td><%= ticket.lname %></td>
        <td><%= ticket.email %></td>
        <td><%= ticket.seat %></td>
        <td><%= ticket.status %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
